{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block body %}
    <h1>Créer un événement</h1>

    {{ form_start(form) }}

    <div class="form-group row">
        {{ form_label(form.nom, 'Nom de l\'événement', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_label(form.emplacement, 'Lieu', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.emplacement, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.emplacement) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_label(form.nombreplaces, 'Nombre de places', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.nombreplaces, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nombreplaces) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_label(form.date, 'Date', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Ajouter</button>
            <a href="{{ path('app_event_list') }}" class="btn btn-secondary">Voir la liste</a>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

