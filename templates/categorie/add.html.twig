{% extends 'base.html.twig' %}

{% block title %}Ajout{% endblock %}

{% block body %}
    <h1>Créer une catégorie</h1>

    {{ form_start(form) }}

    <div class="form-group row">
        {{ form_label(form.nom, 'Nom de la catégorie', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
    </div>

    {# Suppression de la section pour le champ image #}
    {# 
    <div class="form-group row">
        {{ form_label(form.image, 'Image (URL)', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.image) }}
        </div>
    </div>
    #}

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Ajouter</button>
            <a href="{{ path('app_categorie_list') }}" class="btn btn-secondary">Voir la liste</a>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

